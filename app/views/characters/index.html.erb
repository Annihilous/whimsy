<div class='container'>
  <p style='color: green'><%= notice %></p>

  <header class="d-flex flex-wrap justify-content-between align-items-center pb-4">
    <div>
      <% content_for :title, 'Characters' %>
      <h1 class="display-4">Characters</h1>
    </div>
    <div>
      <%= link_to 'New Character', new_character_path, class: 'btn btn-primary btn-lg' %>
    </div>
  </header>

  <table class='table table-hover table-bordered'>
    <thead>
      <tr>
        <th>
          Name
        </th>
        <th>
          Race
        </th>
        <th>
          Class
        </th>
        <th>
          Tag
        </th>
        <th>
        </th>
      <tr>
    </thead>
    <tbody>
      <% @characters.each do |character| %>
        <tr>
          <td><%= character.name %></td>
          <td><%= character.race %></td>
          <td><%= character.character_class %></td>
          <td><%= character.tag %></td>
          <td>
            <%= link_to 'View', character_path(character) %>
            <%= link_to 'Edit', edit_character_path(character) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
